<%layout('/layouts/boilerPlate')%>
<body>
    <h2>All Listings</h2>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let listing of destinations) { %>
            <div class="card col card-listing">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 20rem;">
                
                <div class="card-body">
                    <b>
                        <p class="card-text"><%= listing.title %></p>
                    </b>
                    <br>
                    &#8377;<%= listing.price.toLocaleString('en-IN') %> per day
                </div>
            </div>
        <% } %>
    </div>
</body>
