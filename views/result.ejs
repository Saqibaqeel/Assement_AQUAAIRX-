<%layout('/layouts/boilerPlate')%>

<body>

  <div class="container text-center my-5">
    <h1 class="fw-bold">Best destination for You </h1>
  </div>

  <div class="container">
    <% if (listing.length > 0) { %>
      <div class="row g-4">
        <% for (let list of listing) { %>
          <div class="col-md-4">
            <div class="card shadow-sm h-100">
              <img src="<%= list.image.url %>" class="card-img-top" alt="<%= list.title %>">
              <div class="card-body text-center">
                <h5 class="card-title fw-bold"><%= list.title %></h5>
                <p class="card-text"><%= list.description %></p>
                <p class="text-success fw-bold">$<%= list.price %> per night</p>
                <p class="text-muted"><%= list.location %>, <%= list.country %></p>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <div class="alert alert-warning text-center" role="alert">
        No destinations found based on your preferences.
      </div>
    <% } %>
  </div>

  
  </body>